<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="sale_order_form_view_inherit" model="ir.ui.view">
		<field name="name">sale.order.form</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="arch" type="xml">

			<xpath expr="//header" position="inside">
				<button name='transfer_db_data' string="Migrate" type="object" groups="de_sale_integration_dest.group_allow_migrate_access"
						class='btn-danger' attrs="{'invisible': [('is_migrated','=',True)]}"/>
			</xpath>
			
			<xpath expr="//field[@name='payment_term_id']" position="after">
				<field name="is_migrated" readonly="True" />
				<field name="transition_state" readonly="False"/>
			</xpath>

		</field>
	</record>

</odoo>


