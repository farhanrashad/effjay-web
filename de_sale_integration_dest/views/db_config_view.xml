<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_data_config_form" model="ir.ui.view">
		<field name="name">data.migration.config.form</field>
		<field name="model">data.migration.config</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group string='Data Will Be Migrated To'>
						<group>
							<field name="url_db_2" placeholder="URL"/>
							<field name="name_db_2" placeholder="Database Name"/>
						</group>
						<group>
							<field name="username_2" placeholder="Odoo Username" />
							<field name="password_2" password="True" placeholder="Odoo Password" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>


	<record id="view_data_config_tree" model="ir.ui.view">
		<field name="name">data.migration.config.tree</field>
		<field name="model">data.migration.config</field>
		<field name="arch" type="xml">
			<tree>
				<field name="url_db_2" string='To Url'/>
				<field name="name_db_2" string='To Database' />
			</tree>
		</field>
	</record>

	<record id="view_data_config_search" model="ir.ui.view">
		<field name="name">data.migration.config.search</field>
		<field name="model">data.migration.config</field>
		<field name="arch" type="xml">
			<search>
				<field name="name_db_2" />
				<field name="username_2" />
			</search>
		</field>
	</record>


	<record id="action_data_config_view" model="ir.actions.act_window">
		<field name="name">Data Migration Configuration</field>
		<field name="res_model">data.migration.config</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_mode">tree,form</field>
		<field name="domain">[]</field>
		<field name="context">{}</field>
		<field name="search_view_id" ref="view_data_config_search" />
		<field name="view_id" ref="view_data_config_tree" />
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				No Configuration Found, Let's Create one.....
			</p>
		</field>
	</record>
	
	<menuitem id="menu_custom_db_synch" name="DB Synchronization" parent="base.menu_administration" sequence="120" groups="base.group_no_one"/>
              
	<menuitem id="data_migration_db_menu" name="Synch Config"
			parent="menu_custom_db_synch" action="de_sale_integration_dest.action_data_config_view"
			sequence="3" />

</odoo>


